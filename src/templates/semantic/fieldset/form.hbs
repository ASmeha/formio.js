<fieldset>
  <legend ref="header" class="{{component.collapsible ? 'formio-clickable' : ''}}">
    {{t(component.legend)}}
    {% if (component.tooltip) { %}
      <i ref="tooltip" class="{{iconClass('question-sign')}}" data-title="{{component.tooltip}}"></i>
    {% } %}
  </legend>  {% if (!collapsed) { %}
  <div class="card-body" ref="{{nestedKey}}">
    {{children}}
  </div>
  {% } %}
</fieldset>
